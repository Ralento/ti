<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/calendario.css"> <!-- Asegúrate de tener este CSS -->
    <title>Calendario de Reservaciones</title>
</head>
<body>
    <div class="calendar-container">
        <h1>Calendario de Reservaciones</h1>
        <form action="/reservar" method="POST">
            <label for="fecha">Selecciona una fecha:</label>
            <input type="date" id="fecha" name="fecha" required>
            <label for="atraccion">Selecciona una atracción:</label>
            <select id="atraccion" name="atraccion_id" required>
                <% atracciones.forEach(function(atraccion) { %>
                    <option value="<%= atraccion.id %>"><%= atraccion.nombre %></option>
                <% }); %>
            </select>
            <button type="submit">Reservar</button>
        </form>
        
        <div class="registered-dates">
            <h2>Fechas Reservadas:</h2>
            <% if (reservaciones.length > 0) { %>
                <ul>
                    <% reservaciones.forEach(function(reservacion) { %>
                        <li><%= reservacion.fecha %> - <%= reservacion.atraccion_nombre %></li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No hay reservaciones realizadas.</p>
            <% } %>
        </div>
    </div>
</body>
</html>